<div class="container bg">

      <div class="row d-flex mx-auto" id="banner">
            <div class="col">
                  <img src="/img/1200px-Whataburger_logo.png" alt="Whataburger Eat-Da-Burger App" id="banner-icon"
                        class="d-flex mx-auto">
                  <h1 class="text-center">Whataburger Eat-A-Burger</h1>
                  <p></p>
            </div>
      </div>
      <hr />
      <!-- end .row -->

      <div class="row">
            <div class="col-sm-6">

                  <br>
                  <h2>Burgers Available To Eat!</h2>

                  <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <li>
                              {{this.burger_name}}

                              <form action="/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="1">
                                    <button class="btn btn-secondary" type="submit">Devour It!</button>
                              </form>

                        </li>
                        {{/unless}}
                        {{/each}}
                  </ul>

            </div>

            <div class="col-sm-6">

                  <h2>Burgers That Have Been Eaten!</h2>

                  {{#each burgers}}
                  {{#if this.devoured}}
                  <li>
                        {{this.burger_name}}

                  </li>
                  {{/if}}
                  {{/each}}

            </div>

      </div>
      <!-- end .row -->

      <div class="row">
            <div class="center col-sm-12">

                  <h2>Add A Burger!</h2>

                  <form class="create-update-form" action="/" method="POST">

                        <div class="form-group">
                              <p>Enter a burger you want to order and click the Submit Order button.</p>
                              <input type="text" id="ca" name="burger_name">
                              <input type="hidden" name="devoured" value="0">
                        </div>

                        <button class=" btn btn-secondary" type="submit">Submit Order</button>
                  </form>

            </div>

      </div>
      <!-- end .row -->

</div>